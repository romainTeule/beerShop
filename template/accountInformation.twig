{% extends "base.twig" %}
{% block head %}
    {{ parent() }}
    
{% endblock %}
{% block title %}{{title}}{% endblock %}
{% block content %}
	<div id="container">
	    
	    <form>
	        
        <div class="form-row">
			<div class="form-group col-md-6" >
				<label>Nom</label>
				 <input type="text" readonly class="form-control-plaintext" id="nom" name="nom"  placeholder="Entrez votre nom" value="{{ lastname|default('') }}" >
	   			
			</div>
			<div class="form-group col-md-6" >
				<label>Prenom</label>
				 <input type="text" readonly class="form-control-plaintext" id="prenom" name="prenom" placeholder="Entrez votre prenom" value="{{ name|default('') }}" >
	   			
			</div>
		</div>
		
			<div class="form-row">
			<div class="form-group col-md-6" >
				<label>Login</label>
				 <input type="text" readonly class="form-control-plaintext" id="login" name="login" placeholder="Entrez un nom d'utilisateur" value="{{ username|default('') }}" >
	   			
			</div>
			<div class="form-group col-md-6" >
				<label>Email</label>
				 <input type="email"   readonly class="form-control-plaintext"  name="email" placeholder="Entrez votre email" value="{{ email|default('') }}" >
	   			
			</div>

		</div>
	        
	    </form>
	<form id="formulaireAdresse" action="/updateAdress" method="post"> 
		
		<div class="form-row">
			<div class="form-group col-md-3" >
				<label>Numero de rue</label>
				 <input type="number" class="form-control" id="numeroRue" name="numeroRue"  placeholder="Entrez votre numero de rue" value="{{ streetnumber|default('') }}" required>
	   			
			</div>
			<div class="form-group col-md-9" >
				<label>Nom de rue</label>
				 <input type="text" pattern="([A-z0-9À-ž\s]){2,}" class="form-control" id="nomRue" name="nomRue"  placeholder="Entrez le nom de votre rue" value="{{ street|default('') }}" required>
	   			
			</div>

		</div>
		<div class="form-row">
			<div class="form-group col-md-3" >
				<label>Code Postal</label>
				 <input type="text" pattern="[0-9]{5}" class="form-control" id="codeP" name="codeP" placeholder="Entrez le code postal" value="{{ PostalCode|default('') }}" required>
	   			
			</div>
			<div class="form-group col-md-9" >
				<label>Ville</label>
				 <input type="text" pattern="[a-zA-Z]*-?[a-zA-Z]*"  class="form-control" id="ville"  name="ville" placeholder="Entrez le nom de votre ville" value="{{ City|default('') }}" required>
	   			
			</div>

		</div>
	
	
			<button type="submit" id="submit"  class="btn btn-primary">Mette à jour Adresse</button>
	</form>
	
	<form id="formulaire" action="/updatePassword" method="post">
	    
	    
		<div class="form-row">
			<div class="form-group col-md-6" >
				<label>Mot de Passe</label>
				 <input type="password" pattern="(?=^.{8,}$)((?=.*\d)|(?=.*\W+))(?![.\n])(?=.*[A-Z])(?=.*[a-z]).*$" class="form-control" id="mdp" name="mdp" placeholder="Entrez un mot de passe" required>
	   			
			</div>
			<div class="form-group col-md-6" >
				<label>Verification mot de passe</label>
				 <input type="password" pattern="(?=^.{8,}$)((?=.*\d)|(?=.*\W+))(?![.\n])(?=.*[A-Z])(?=.*[a-z]).*$"   class="form-control" id="mdpCheck" name="mdpCheck"  placeholder="Re-entrez mot de passe pour verification" required>
	   			
			</div>
            	<button type="submit" id="submit"  class="btn btn-primary">Mette à jour mot de passe</button>
	    
	</form>
</div>
{% endblock %}

{% block scripts %}
    {{ parent() }}
  <script src="{{ base_url}}/asset/js/script.js"></script> 
{% endblock %}